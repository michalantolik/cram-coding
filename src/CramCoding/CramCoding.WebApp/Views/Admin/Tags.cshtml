@model TagViewModel[]

@{
    ViewData["Title"] = "Tagi";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="container-fluid">

    <!-- Page header and button -->
    <div class="row pb-4">

        <!-- Empty column (for layout purposes) -->
        <div class="col"></div>

        <!-- Page header -->
        <div class="col">
            <h1 class="display-4 text-center">Tagi</h1>
        </div>

        <!-- Add tag button -->
        <div class="col my-auto">
            <a type="button" asp-controller="Admin" asp-action="AddTag" class="btn btn-lg btn-primary float-end">
                Dodaj
            </a>
        </div>
    </div>

    <!-- Table of tags -->
    <div class="row">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Posty</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var tag in Model)
                {
                    <tr>
                        <td>@tag.TagName</td>
                        <td>@tag.PostsCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
