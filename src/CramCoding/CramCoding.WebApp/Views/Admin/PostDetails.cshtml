@model Post

@{
    ViewData["Title"] = "Post";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";

    const string ddResponsive = "offset-sm-2 col-sm-8 offset-md-1 col-md-9 offset-lg-0 col-lg-10";
}

<div class="container">

    <!-- Page Header and Edit/Delete Buttons -->
    <div class="row pb-2">

        <!-- Empty column (for layout purposes) -->
        <div class="col-md"></div>

        <!-- Page Header -->
        <div class="col-sm col-md">
            <h1 class="display-4 text-md-center">Wpis</h1>
        </div>

        <!-- Edit/Delete Buttons -->
        <div class="col-sm col-md my-auto">
            <div class="d-flex justify-content-md-end">
                <button href="#" class="btn btn-lg btn-outline-dark">Edytuj</button>
                <button href="#" class="btn btn-lg btn-outline-dark ms-3">Usuń</button>
            </div>
        </div>

    </div>

    <!-- Horizontal Line -->
    <div class="row pb-4">
        <hr />
    </div>

    <!-- Post Details -->
    <div class="row mb-3">

        <!-- ID -->
        <dl class="row mb-0">
            <dt class="col-2">Id</dt>
            <dd class="@ddResponsive">@Model.PostId</dd>
        </dl>

        <!-- Header -->
        <dl class="row mb-0">
            <dt class="col-2">Tytuł</dt>
            <dd class="@ddResponsive">@Model.Header</dd>
        </dl>

        <!-- Content -->
        <dl class="row mb-0">
            <dt class="col-2">Treść</dt>
            <dd class="@ddResponsive">@Model.Content</dd>
        </dl>

        <hr class="mt-2" />

        <!-- Published Date -->
        <dl class="row mb-0">
            <dt class="col-2">Opublikowano</dt>
            <dd class="@ddResponsive">@Model.PublishedAt</dd>
        </dl>

        <!-- Updated Date -->
        <dl class="row mb-0">
            <dt class="col-2">Zaktualizowano</dt>
            <dd class="@ddResponsive">@Model.UpdatedAt</dd>
        </dl>

        <!-- Created Date -->
        <dl class="row mb-0">
            <dt class="col-2">Utworzono</dt>
            <dd class="@ddResponsive">@Model.CreatedAt</dd>
        </dl>

        <!-- Is Post Visible -->
        <dl class="row mb-0">
            <dt class="col-2">Widoczność</dt>
            <dd class="@ddResponsive">@Model.IsVisible</dd>
        </dl>

        <hr class="mt-2" />

        <!-- Visits Count -->
        <dl class="row mb-0">
            <dt class="col-2">Liczba odwiedzin</dt>
            <dd class="@ddResponsive">@Model.ViewsCount</dd>
        </dl>

        <!-- Comments Count -->
        <dl class="row mb-0">
            <dt class="col-2">Liczba komentarzy</dt>
            <dd class="@ddResponsive">@Model.Comments.Count</dd>
        </dl>

        <hr class="mt-2" />

        <!-- Author -->
        <dl class="row mb-0">
            <dt class="col-2">Autor</dt>
            <dd class="@ddResponsive">@Model?.Author?.Email</dd>
        </dl>

        <hr class="mt-2" />

        <!-- Categories -->
        <dl class="row mb-0">
            <dt class="col-2">Kategorie</dt>
            <dd class="@ddResponsive">
                <ul class="list-unstyled">
                    @foreach (var category in Model.Categories)
                    {
                        <li>@category.Name</li>
                    }
                </ul>
            </dd>
        </dl>

        <hr class="mt-2" />

        <!-- Tags -->
        <dl class="row mb-0">
            <dt class="col-2">Tagi</dt>
            <dd class="@ddResponsive">
                <ul class="list-unstyled">
                    @foreach (var tag in Model.Tags)
                    {
                        <li>@tag.Name</li>
                    }
                </ul>
            </dd>
        </dl>
        <hr class="mt-2" />
    </div>

    <!-- Back to List button -->
    <a type="button" asp-controller="Admin" asp-action="Posts" class="btn btn-outline-dark">Cofnij do Listy</a>

</div>
