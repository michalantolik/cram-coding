@model CategoryPostsViewModel

@foreach (var post in Model.Posts)
{
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-dark text-light">
            <div>@post.Header</div>
        </div>
        <div class="card-body">
            <p>@post.Content</p>
        </div>
    </div>
}
